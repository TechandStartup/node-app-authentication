<% include ../layouts/header %>

<h1 class='mt-4'>Log In</h1>

<% include ../layouts/form-errors %>

<form method="POST" action="/login" class='card mt-3 p-3'>
  <div class='form-group'>
    <label for="email">Email</label>
    <input type="email" name="email" value="<%= typeof user === 'undefined' ? '' : user.email %>" class="form-control" required autofocus>
  </div>

  <div class='form-group'>
    <label for="password">Password</label> (<a href="/forgot-password" tabindex="-1">Forgot Password?</a>)
    <input type="password" name="password" class="form-control" required>
  </div>

  <div class="mt-3">
    <button class="btn btn-primary" type="submit">Submit</button>
    <span class="float-right">New user? <a href="/signup">Sign up now!</a></span>
  </div>
</form>

<% include ../layouts/footer %>