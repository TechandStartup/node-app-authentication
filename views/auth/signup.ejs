<% include ../layouts/header %>

<h1>Sign Up</h1>

<% include ../layouts/form-errors %>

<form method="POST" action="/signup" class='card mt-3 p-3'>
  <div class='form-group'>
    <label for="username">Username</label>
    <input type="text" name="username" value="<%= typeof user === 'undefined' ? '' : user.username %>" class="form-control" maxlength="50" autofocus>
  </div>

  <div class='form-group'>
    <label for="email">Email</label>
    <!-- change type to email -->
    <input type="text" name="email" value="<%= typeof user === 'undefined' ? '' : user.email %>" class="form-control" maxlength="50">
  </div>

  <div class='form-group'>
    <label for="password">Password (must be at least 6 characters)</label>
    <input type="password" name="password" class="form-control mb-2" maxlength="32">
  </div>

  <div class='form-group'>
    <label for="passwordConfirmation">Confirm Password</label>
    <input type="password" name="passwordConfirmation" class="form-control">
  </div>

  <div class="mt-3">
    <button class="btn btn-primary" type="submit">Submit</button>
    <span class="float-right">Already a member? <a href="/login">Log in</a></span>
  </div>
</form>

<% include ../layouts/footer %>